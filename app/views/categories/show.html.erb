<% content_for :sidebar do %>
    <div class="span2 ">
      <div class="well sidebar-nav">
        <h3>Категории</h3>
        <%= render_navigation :level => 2 %>
      </div><!--/.well -->
    </div><!--/span-->
<% end %>
<% content_for :title, " Категория - "+@category.name %>
<div class="span10">
  <h1><%= @category.name %></h1>
  <table class="table table-striped">

    <%= render @items  %>
  </table>
  <%= will_paginate @items, :next_label => ">>", :previous_label => "<<" %>
</div>